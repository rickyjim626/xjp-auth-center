{
  "name": "@xiaojinpro/auth-center",
  "version": "1.0.0",
  "description": "XiaoJin Pro Authentication Center - WeChat OAuth & JWT SSO",
  "main": "dist/index.tcb.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.tcb.ts",
    "build": "tsc",
    "start": "node dist/index.tcb.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t ghcr.io/rickyjim626/$(basename $(pwd)):$(git rev-parse --short HEAD) .",
    "docker:push": "npm run docker:build && docker push ghcr.io/rickyjim626/$(basename $(pwd)):$(git rev-parse --short HEAD) && docker tag ghcr.io/rickyjim626/$(basename $(pwd)):$(git rev-parse --short HEAD) ghcr.io/rickyjim626/$(basename $(pwd)):latest && docker push ghcr.io/rickyjim626/$(basename $(pwd)):latest",
    "deploy:image": "./scripts/docker-build-push.sh"
  },
  "dependencies": {
    "@cloudbase/adapter-node": "^1.0.4",
    "@cloudbase/js-sdk": "^2.9.6-alpha.0",
    "@cloudbase/node-sdk": "^2.10.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@noble/ed25519": "^2.0.0",
    "axios": "^1.6.5",
    "dotenv": "^16.4.1",
    "fastify": "^4.25.2",
    "jose": "^5.2.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
